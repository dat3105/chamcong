<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:context=".MainActivity">


  <androidx.cardview.widget.CardView
      android:layout_width="600dp"
      app:cardCornerRadius="20dp"
      android:layout_marginLeft="-15dp"
      android:layout_height="800dp"
      app:cardBackgroundColor="#1a4689">
      <androidx.cardview.widget.CardView
          android:layout_width="520dp"
          android:layout_height="630dp"
          android:layout_marginLeft="40dp"
          android:layout_marginTop="30dp"
          app:cardCornerRadius="20dp"
          >
          <ImageView
              android:layout_width="520dp"
              android:layout_height="630dp"
              android:src="@drawable/user2"/>
      </androidx.cardview.widget.CardView>

  </androidx.cardview.widget.CardView>

    <LinearLayout

        android:layout_width="436dp"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <TextView
            android:layout_marginTop="65dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#153678"
            android:textSize="32sp"
            android:textStyle="bold"
            android:text="Nguyễn Minh Hiếu" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#153678"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Mã nhân viên: HPDQ00075" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#153678"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Phòng ban" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:cardCornerRadius="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:cardBackgroundColor="#EDF7FE">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#153678"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:text="Phòng kế toán" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:textSize="21dp"
            android:textStyle="bold"
            android:textColor="#153678"
            android:layout_height="wrap_content"
            android:text="Thời gian chấm công" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#EDF7FE">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#153678"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:text="08 : 00 : 30" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#153678"
            android:textSize="21dp"
            android:textStyle="bold"
            android:text="Ngày chấm công" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#EDF7FE">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#153678"
                    android:textSize="21dp"
                    android:textStyle="bold"
                    android:text="05 - 10 - 2020" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="70dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            app:cardBackgroundColor="#1a4689">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextClock
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:format12Hour="hh : mm : ss"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginLeft="170dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1a4689"
            android:text=" Made by TinVietSoft">

        </TextView>
    </LinearLayout>



</LinearLayout>